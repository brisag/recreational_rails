<header>
  <nav>
    <%= link_to "All Backcountry Offices", "/offices" %>
    <%= link_to "All Trails", "/trails" %>
  </nav>
</header>

<h1><%= link_to "#{@office.name}", "/offices/#{@office.id}" %>'s Trails</h1>

<%= form_with url: "/offices/#{@office.id}/trails", method: :get, local: true do |form|%>
<%= form.label :number, "Filter by elevation" %>
<%= form.text_field :number %>
<%= form.submit "Submit" %>
<% end %>

<p><%= link_to "Sort Alphabetically", "/offices/#{@office.id}/trails?sort=true" %></p>
<% @office.trails.each do |trail| %>
<h3>Trail Name: <%= "#{trail.name}" %></h3>
<p>Elevation: <%= trail.elevation %></p>
  <p>Dogs Allowed? <%= trail.dogs_allowed %></p>
<% end %>

<p><%= link_to "Create Trail", "/offices/#{@office.id}/trails/new" %></p>
